<odoo>
    <record id="action_encounter_all" model="ir.actions.act_window">
        <field name="name">All Encounters</field>
        <field name="res_model">dudoxx.encounter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_encounter_my" model="ir.actions.act_window">
        <field name="name">My Encounters</field>
        <field name="res_model">dudoxx.encounter</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('doctor_id', '=', uid)]</field>
    </record>

    <record id="view_encounter_form" model="ir.ui.view">
        <field name="name">encounter.form</field>
        <field name="model">dudoxx.encounter</field>
        <field name="arch" type="xml">
            <form string="Encounter">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Encounter Lines">
                            <field name="encounter_line_ids">
                                <tree string="Encounter Lines">
                                    <field name="description"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_encounter_tree" model="ir.ui.view">
        <field name="name">encounter.tree</field>
        <field name="model">dudoxx.encounter</field>
        <field name="arch" type="xml">
            <tree string="Encounter">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_encounter_kanban" model="ir.ui.view">
        <field name="name">encounter.kanban</field>
        <field name="model">dudoxx.encounter</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="patient_id"/>
                            </strong>
                            <div>
                                <field name="doctor_id"/>
                            </div>
                            <div>
                                <field name="date"/>
                            </div>
                            <div>
                                <field name="status"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
